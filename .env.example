# ===========================================
# LaunchOS Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key (safe to expose in browser)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys

# Stripe publishable key (safe to expose in browser)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# Stripe price IDs for each tier (create in Stripe Dashboard)
VITE_STRIPE_PRICE_STARTER=price_starter_id
VITE_STRIPE_PRICE_GROWTH=price_growth_id
VITE_STRIPE_PRICE_SCALE=price_scale_id

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================

# PostHog API Key (optional)
# VITE_POSTHOG_KEY=phc_your-key-here
# VITE_POSTHOG_HOST=https://eu.posthog.com

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================

# Set to true to enable demo mode (bypasses auth)
# VITE_DEMO_MODE=false
